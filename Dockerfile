# Используйте базовый образ Node.js
FROM node:17

# Установите рабочую директорию внутри контейнера
WORKDIR /app

# Копируйте файлы package.json и yarn.lock в рабочую директорию
COPY package*.json yarn.lock ./

# Установите зависимости
RUN yarn install

# Скопируйте все файлы вашего проекта в рабочую директорию
COPY . .

# Выполните команду для сборки приложения
RUN yarn build

# Укажите команду для запуска вашего приложения (если требуется)
# CMD [ "yarn", "start" ]